{% extends "main.tpl.twig" %}
{% block title %}Акт выполненых работ{% endblock %}
{% block scripts %}
	<script src="{{theme}}/scripts/autoresize.jquery.js"></script>
	<style>
		.wrapper {
			min-width: 800px;
			max-width: 800px;
			margin: 0 auto;
		}
		table, table td {
			border-collapse:collapse !important;
			padding:3px;
			~width: 800px;
			margin: 0;
		}
		table {
			white-space: normal;
			line-height: normal;
			font-weight: normal;
			font-size: medium;
			font-variant: normal;
			font-style: normal;
			color: -webkit-text;
			text-align: start;
		}
		b {
			font-weight: bold;
		}
		.head {
			font-size:18px;
			line-height:30px;
		}
		.h1{
			color:black;
			font-weight:normal;
			margin-top:25px;
			margin-bottom:20px;
			font-family:Arial, sans-serif;
			font-size:22pt;
		}
		.td_row_price {
		    width: 160px;
		}
		.print{
			~width:800px;
			margin: 0 auto;
		}
		@media print{
			.wrapper {
				width: 275mm;
				margin: 0;
			}
			table, table td {
				border-collapse:collapse !important;
				padding:5mm;
				width: 275mm;
				margin: 0;
			}
			.print{
				margin: 0;
			}
			.head {
				width:140mm;
				font-size:18px;
				line-height:30px;
			}
			.blk-head{
				background:#eeeeee;
			}
			.h1{
				color:black;
				font-weight:normal;
				margin-top:25px;
				margin-bottom:20px;
				font-family:Arial, sans-serif;
				font-size:22pt;
			}
		}
	</style>
	<script>
		$(document).ready(function(){
			$('textarea').autoResize();
			//doPrint();
		});
		function doPrint() {
			window.print();
			window.close();
		}
	</script>
{% endblock %}
{% block body %}
	<div class="print">
		<table align="center">
			<tr>
				<td style="font-size:11pt;display:flex;justify-content: space-between;">
					
					<div class="head" style="">
						<b>Сервис-центр «Нанобайт»</b><br>
						+7 978 745 37 55
					</div>
					
					<div class="head" style="text-align:right;line-height:24px;">
						г. Симферополь, ул. Павленко, 15<br>
						Режим работы: с 9:00 до 19:00, без выходных<br>
						<b>nbyte.ru</b>
					</div>

				</td>
				
			</tr>
			<tr>
				<td align="center">
					<h1 class="h1">Акт выполненных работ №{{'%05d'|format(data.ta_id)}}, {{data.ta_date_pay|date("d.m.Y")}}</h1>
				</td>
			</tr>
			<tr>
				<td>
					<div style="font-size:18px;">{{data.de_name}} {{data.ta_model}}, SN:  {{data.ta_serial}}</div>
					<table align="center" border="1" style="margin-top:15px;">
						<thead>
							<tr>
								<td style="background:#eeeeee;width:300px; border: 1px solid #000000;">
									<span class="blk-head">Услуга</span>
								</td>
								<td style="background:#eeeeee;width:100px; border: 1px solid #000000;">
									<span class="blk-head">Гарантия, мес.</span>
								</td>
								<td style="background:#eeeeee;width:100px; border: 1px solid #000000;">
									<span class="blk-head">Цена</span>
								</td>
							</tr>
						</thead>
						<tr>
							<td valign="top" style="width:550px; border: 1px solid #000000;">
								<textarea rows="5" style="border:none;Arial, sans-serif;width:95%;line-height:26px;font-size:14pt;">{{data.ta_act.ta_what_is_done}}</textarea>
							</td>
							<td valign="top" style="width:125px; border: 1px solid #000000;">
								<textarea rows="5" style="border:none;Arial, sans-serif;width:92%;line-height:26px;font-size:14pt;">{{data.ta_act.warranty}}</textarea>
							</td>
							<td valign="top" style="width:125px; border: 1px solid #000000;">
								<textarea rows="5" style="border:none;Arial, sans-serif;width:92%;line-height:26px;font-size:14pt;">{{data.ta_act.price}}</textarea>
							</td>
						</tr>
						<tr>
							<td valign="top" colspan="2" style="width:450px; border: 1px solid #000000;">
								<b>Всего:</b>
							</td>
							<td valign="top" style="width:50px; border: 1px solid #000000;">
								{{'%s руб.'|format(data.ta_price_work+data.ta_price_hard)}}
							</td>
						</tr>

					</table>
				</td>
			</tr>

			<tr>
				<td style="display:flex;justify-content: space-between;padding-top:40px;">
					<div style="">

					</div>
					<div style="text-align:right;line-height:20px;">
						_______________________ 	М.П.
					</div>
				</td>
			</tr>
			<tr>
		</table>
	</div>
{% endblock %}